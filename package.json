{
	"name": "code-edytor",
	"version": "0.0.9",
	"description": "A basic Svelte code editor component with Tree-sitter syntax highlighting, intelligent autocompletion, and multi-language support for R, Python, and JavaScript (or bring your own language!)",
	"author": "Eric J. Kort",
	"license": "MIT",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test:e2e": "playwright test",
		"test:e2e:headed": "playwright test --headed",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:debug": "playwright test --debug",
		"test:e2e:report": "playwright show-report",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"publish": "git add . && git commit -m 'pre-release changes' || true; npm run build && npm version patch && git push --follow-tags"
	},
	"files": [
		"dist",
		"LICENSES",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.22.0",
		"@playwright/test": "^1.56.0",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@types/node": "^22",
		"@vitest/browser": "^3.2.3",
		"eslint": "^9.22.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"playwright": "^1.56.0",
		"playwright-test": "^14.1.12",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"publint": "^0.3.2",
		"svelte": "^5.0.0",
		"tree-sitter-javascript": "^0.23.1",
		"tree-sitter-python": "0.23.6",
		"typescript": "^5.3.2",
		"vite": "^7.0.4",
		"vitest": "^3.2.3",
		"vitest-browser-svelte": "^0.1.0",
		"web-tree-sitter": "0.24.7"
	},
	"keywords": [
		"svelte",
		"code-editor",
		"syntax-highlighting",
		"completions",
		"r-language",
		"tree-sitter"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ejkreboot/code-edytor.git"
	},
	"homepage": "https://github.com/ejkreboot/code-edytor#readme",
	"bugs": {
		"url": "https://github.com/ejkreboot/code-edytor/issues"
	},
	"dependencies": {
		"@davisvaughan/tree-sitter-r": "^1.2.0",
		"web-tree-sitter": "0.24.7"
	}
}
